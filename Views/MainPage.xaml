<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plantator.Views.MainPage"
             Padding="5">

    <ScrollView>
    <VerticalStackLayout Spacing="10" Padding="5">
        <Label Text="Twoje Kwiatki:"
               FontSize="25"
               TextColor="#4D3A31"
               />
        <Frame HeightRequest="70" 
               CornerRadius="14" 
               Margin="5" 
               Padding="10" 
               HasShadow="False"
               BackgroundColor="#FCFAf8"
               BorderColor="#DAD1C8">
            <HorizontalStackLayout VerticalOptions="Center" 
                                   HorizontalOptions="FillAndExpand" 
                                   Spacing="10">
                
                <Image Source="kwiatek1.png" 
                       HeightRequest="50" 
                       WidthRequest="50"/>
                <Label Text="kwiatek 1" 
                       VerticalOptions="Center" 
                       HorizontalOptions="Start"
                       TextColor="#4D3A31"/>
                 
                <CheckBox HeightRequest="40"
                          WidthRequest="40"
                          Margin="165,0,0,0"
                          Color="#4D313A"/>
                             
                
            </HorizontalStackLayout>
        </Frame>

        <Frame HeightRequest="70" 
               CornerRadius="14" 
               Margin="5" 
               Padding="10" 
               HasShadow="False"
               BackgroundColor="#FCFAf8"
               BorderColor="#DAD1C8">
            <HorizontalStackLayout VerticalOptions="Center" 
                                   HorizontalOptions="FillAndExpand" 
                                   Spacing="10">
                <Image Source="kwiatek1.png" 
                       HeightRequest="50" 
                       WidthRequest="50"/>
                <Label Text="kwiatek 2" 
                       VerticalOptions="Center" 
                       HorizontalOptions="FillAndExpand"
                       TextColor="#4D3A31"/>
                <HorizontalStackLayout HorizontalOptions="End" 
                                       VerticalOptions="Center">
                       <CheckBox HeightRequest="40"
                                 WidthRequest="40"
                                 Margin="165,0,0,0"
                                 Color="#4D313A"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>
           
        <Frame HeightRequest="70" 
               CornerRadius="14" 
               Margin="5" 
               Padding="10" 
               HasShadow="False"
               BackgroundColor="#FCFAf8"
               BorderColor="#DAD1C8">
            <HorizontalStackLayout VerticalOptions="Center" 
                                   HorizontalOptions="FillAndExpand" 
                                   Spacing="10">
                <Image Source="kwiatek1.png" 
                       HeightRequest="50" 
                       WidthRequest="50"/>
                <Label Text="kwiatek 3" 
                       VerticalOptions="Center" 
                       HorizontalOptions="FillAndExpand"
                       TextColor="#4D3A31"/>
                <HorizontalStackLayout HorizontalOptions="End" 
                                       VerticalOptions="Center"
                                       Spacing="10">
                       <CheckBox HeightRequest="40"
                                 WidthRequest="40"
                                 Margin="165,0,0,0"
                                 Color="#4D313A"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>
           <Button Text="Dodaj roślinę"
                   BackgroundColor="#568C69"
                   TextColor="#FCFAF8"
                   CornerRadius="16"
                   HeightRequest="62"
                   FontSize="25"
                   Margin="0, 330,0,0"
                   Clicked="OnAddPlantClicked"
           />

    </VerticalStackLayout>
</ScrollView>


</ContentPage>
